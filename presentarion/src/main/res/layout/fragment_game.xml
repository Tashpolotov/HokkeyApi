<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.GameFragment"
    android:background="@color/black_backround">

    <ImageView
        android:id="@+id/img_avatar_team"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/team_krakens"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kraken"
        app:layout_constraintStart_toEndOf="@id/img_avatar_team"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="6dp"
        />

    <TextView
        android:id="@+id/tv_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_team_name"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="90dp"
        />

    <ImageView
        android:id="@+id/img_team_second_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/team_avalanche"
        app:layout_constraintTop_toBottomOf="@id/img_avatar_team"
        app:layout_constraintStart_toStartOf="@id/img_avatar_team"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_team_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avalanche"
        app:layout_constraintTop_toBottomOf="@id/tv_team_name"
        app:layout_constraintStart_toStartOf="@id/tv_team_name"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_second_team_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_scroll"
        app:layout_constraintStart_toStartOf="@id/tv_scroll"
        android:layout_marginTop="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_live"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:text="LIVE"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img_team_second_avatar"
        app:layout_constraintStart_toStartOf="@+id/img_team_second_avatar"
        app:cornerRadius="18dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"

        />

    <TextView
        android:id="@+id/tv_live_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_live"
        app:layout_constraintTop_toBottomOf="@id/tv_team_second_name"
        android:text="1st"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_live_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_live_part"
        app:layout_constraintTop_toBottomOf="@id/tv_team_second_name"
        android:text="12:45"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_live"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/btn_live"
        app:layout_constraintStart_toStartOf="@id/btn_live"
        android:background="@drawable/shape_linaer"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="12:02"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            />


        <ImageView
            android:id="@+id/img_live_team_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/team_krakens"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"

            />

        <TextView
            android:id="@+id/tv_live_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sea"
            app:layout_constraintTop_toTopOf="@id/img_live_team_name"
            app:layout_constraintStart_toEndOf="@id/img_live_team_name"
            android:textSize="26sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"

            />

        <TextView
            android:id="@+id/tv_live_shot_save_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_live_team_name"
            app:layout_constraintStart_toStartOf="@id/img_live_team_name"
            android:text="Jamie Oleksaik Snap Shot saved by Francouz"
            android:textColor="@color/white"

            />

        <ImageView
            android:id="@+id/img_live_save_goal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_live_shot_save_goal"
            app:layout_constraintStart_toStartOf="@id/tv_live_shot_save_goal"
            android:src="@drawable/image_player"
            android:background="@drawable/shape_avatar_player"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_name_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olekslak"
            app:layout_constraintStart_toEndOf="@id/img_live_save_goal"
            app:layout_constraintTop_toTopOf="@id/img_live_save_goal"
            android:textColor="@color/white"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_number_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#24"
            app:layout_constraintStart_toEndOf="@id/img_live_save_goal"
            app:layout_constraintTop_toBottomOf="@id/tv_name_player"
            android:textColor="@color/white"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>