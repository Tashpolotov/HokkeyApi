<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_rv"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >



    <ImageView
        android:id="@+id/img_team_first"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/team_krakens"

        />

    <TextView
        android:id="@+id/tv_score_team_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_team_first"
        app:layout_constraintTop_toTopOf="@id/img_team_first"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="26sp"
        android:layout_marginTop="12dp"
        />


    <TextView
        android:id="@+id/tv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_score_team_first"
        app:layout_constraintTop_toTopOf="@id/tv_score_team_first"
        android:textColor="@color/white"
        android:text="-"
        android:textSize="26sp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/tv_score_team_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_minus"
        app:layout_constraintTop_toTopOf="@id/tv_minus"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="26sp"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/img_team_second"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/img_team_first"
        app:layout_constraintStart_toEndOf="@id/tv_score_team_second"
        android:src="@drawable/team_avalanche"

        />

    <TextView
        android:id="@+id/tv_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINAL"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_score_team_first"
        app:layout_constraintStart_toStartOf="@id/tv_score_team_first"
        app:layout_constraintEnd_toEndOf="@id/tv_score_team_second"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maple Leaf at Sabres"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/const_rv"
        app:layout_constraintStart_toStartOf="@id/const_rv"
        app:layout_constraintEnd_toEndOf="@id/const_rv"

        />

    <TextView
        android:id="@+id/tv_date_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct 21, 2022"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_team"
        app:layout_constraintStart_toStartOf="@id/tv_name_team"
        app:layout_constraintEnd_toEndOf="@id/tv_name_team"

        />



</androidx.constraintlayout.widget.ConstraintLayout>